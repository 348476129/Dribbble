<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.fallllllll.lipper.ui.main.homelist.ShotsListItemViewModel" />

        <import type="android.view.View" />

        <variable
            name="shotBean"
            type="com.fallllllll.lipper.data.databean.ShotBean" />

        <variable
            name="itemViewModel"
            type="com.fallllllll.lipper.ui.main.homelist.ShotsListItemViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@{itemViewModel.currentLayout==ShotsListItemViewModel.LINEAR_LAYOUT?@dimen/shots_padding_top_large:@dimen/shots_padding_top_small}">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background"
            app:cardElevation="@{itemViewModel.currentLayout==ShotsListItemViewModel.ONLY_IMAGE_LAYOUT?@dimen/shots_card_elevation_image:@dimen/shots_card_elevation}"
            app:cardMaxElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/item_shot_layout"
                android:transitionName="layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp"
                    android:visibility="@{itemViewModel.currentLayout==ShotsListItemViewModel.ONLY_IMAGE_LAYOUT?View.GONE:View.VISIBLE}">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/shots_user_iamge"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:actualImageScaleType="centerCrop"
                        app:frescoImageUriWithTinySize="@{shotBean.user.avatar_url}"
                        app:roundAsCircle="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{shotBean.user.name}"
                        android:textColor="@color/primary_text"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/rebound_icon"
                        android:visibility="@{shotBean.rebound_source_url!=null?View.VISIBLE:View.GONE}" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/item_image"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:actualImageScaleType="centerCrop"
                        app:frescoImageUri="@{(shotBean.images.hidpi!=null&amp;&amp;!shotBean.animated)?shotBean.images.hidpi:shotBean.images.normal}" />

                    <ImageView
                        android:visibility="@{shotBean.animated?View.VISIBLE:View.GONE}"
                        android:layout_width="18dp"
                        android:layout_height="11dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:src="@mipmap/ic_gif" />
                </FrameLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:visibility="@{itemViewModel.currentLayout==ShotsListItemViewModel.ONLY_IMAGE_LAYOUT?View.GONE:View.VISIBLE}">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:visibility="@{itemViewModel.currentLayout==ShotsListItemViewModel.LINEAR_LAYOUT?View.VISIBLE:View.GONE}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@{shotBean.comments_count}"
                            android:textColor="@color/primary_text"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:text="COMMENTS"
                            android:textColor="@color/secondary_text"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_visibility_grey"
                            android:drawablePadding="8dp"
                            android:textColor="@color/primary_text"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:setTextNumber="@{shotBean.views_count}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:text="VIEWS"
                            android:textColor="@color/secondary_text"
                            android:textSize="10sp"
                            android:visibility="@{itemViewModel.currentLayout==ShotsListItemViewModel.LINEAR_LAYOUT?View.VISIBLE:View.GONE}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_favorite_pink"
                            android:drawablePadding="8dp"
                            android:paddingLeft="@{itemViewModel.currentLayout==ShotsListItemViewModel.LINEAR_LAYOUT? @dimen/shots_item_padding_left_large:@dimen/shots_item_padding_left_small}"
                            android:textColor="@color/primary_text"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:setTextNumber="@{shotBean.likes_count}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:text="LIKES"
                            android:textColor="@color/secondary_text"
                            android:textSize="10sp"
                            android:visibility="@{itemViewModel.currentLayout==ShotsListItemViewModel.LINEAR_LAYOUT?View.VISIBLE:View.GONE}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@{itemViewModel.currentLayout==ShotsListItemViewModel.LINEAR_LAYOUT? @dimen/shots_item_padding_left_large:@dimen/shots_item_padding_left_small}"
                            android:text="REPLY"
                            android:textColor="@color/primary_text"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>